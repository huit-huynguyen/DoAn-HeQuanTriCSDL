# ===============================================
# Global settings
# ===============================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# ===============================================
# Project settings
# ===============================================

[*.config]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4

# CSHTML/HTML files use 4-space indentation to maintain
# consistency with C# code sections within these files
[*.{html,cshtml}]
indent_style = space
indent_size = 4

[*.{js,css}]
indent_style = space
indent_size = 4
